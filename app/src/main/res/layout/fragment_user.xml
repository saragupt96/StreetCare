<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:clickable="true"
    android:clipChildren="true"
    android:clipToPadding="true"
    android:duplicateParentState="true"
    android:fadingEdge="vertical"
    android:filterTouchesWhenObscured="true"
    android:fitsSystemWindows="true"
    android:isScrollContainer="true"
    android:keepScreenOn="true"
    android:longClickable="true"
    android:nestedScrollingEnabled="true"
    android:soundEffectsEnabled="true"
    android:splitMotionEvents="true"
    android:touchscreenBlocksFocus="true"
    android:transitionGroup="true">

    <TextView
        android:id="@+id/textViewWelcome"
        android:layout_width="146dp"
        android:layout_height="29dp"
        android:text=".."
        android:textSize="@dimen/text_size20"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.832" />


    <ImageView

        android:id="@+id/imageView2"
        android:layout_width="131dp"
        android:layout_height="91dp"
        android:layout_marginBottom="4dp"
        android:contentDescription="Logo"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/donate_icon" />
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="270dp"
        android:layout_height="260dp"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:fillViewport="true"
        android:windowSoftInputMode="adjustPan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:fitsSystemWindows="true"
            android:focusable="true"
            android:gravity="center"
            android:isScrollContainer="true"
            android:keepScreenOn="true"
            android:orientation="vertical"
            android:overScrollMode="ifContentScrolls"
            android:scrollbarAlwaysDrawHorizontalTrack="false"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbars="vertical"
            android:fillViewport="true">
            <Button

                android:id="@+id/btnEvents"
                android:layout_width="259dp"
                android:layout_height="48dp"
                android:text="Events"
                app:cornerRadius="5dp" />
            <Button
                android:id="@+id/user_button_sign_out"
                android:layout_width="259dp"
                android:layout_height="48dp"
                android:gravity="center|center_vertical"
                android:text="@string/user_button_sign_out"
                app:cornerRadius="5dp" />
            <Button
                 android:id="@+id/user_button_sign_up"
                android:layout_width="259dp"
                android:layout_height="48dp"
                android:gravity="center|center_vertical"
                android:text="@string/user_button_sign_up"
                app:cornerRadius="5dp" />
             <Button
                android:id="@+id/user_button_login"
                android:layout_width="259dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="@string/user_button_login"
                app:cornerRadius="5dp" />
            <Button
                android:id="@+id/user_button_remove_account"
                android:layout_width="259dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="@string/user_button_remove_account"
                app:cornerRadius="5dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>