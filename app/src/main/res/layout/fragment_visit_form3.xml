<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.visit.visit_forms.VisitFormFragment3"
    android:layout_margin="8dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:textSize="@dimen/text_size24"
        android:text="@string/page3_of_4"
        android:textStyle="bold"
        android:layout_margin="@dimen/margin_8dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Headline"
            android:text="@string/outreach_experience"
            android:textStyle="bold"
            android:textSize="@dimen/text_size24"
            android:layout_gravity="center_horizontal"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_16dp">

            <Button
                android:id="@+id/btn_satisfied"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/padding_8dp"
                android:drawableTop="@drawable/ic_baseline_sentiment_very_satisfied_24"
                android:text="@string/satisfied"
                android:drawablePadding="@dimen/padding_8dp"
                android:backgroundTint="@color/gray400"
                android:textAllCaps="false"
                android:textStyle="bold" />
        <Button
            android:id="@+id/btn_neutral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/padding_8dp"
            android:layout_marginStart="@dimen/margin_8dp"
            android:drawableTop="@drawable/ic_baseline_sentiment_neutral_24"
            android:text="@string/neutral"
            android:drawablePadding="@dimen/padding_8dp"
            android:backgroundTint="@color/gray400"
            android:textAllCaps="false"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/btn_dissatisfied"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/padding_8dp"
            android:layout_marginStart="@dimen/margin_8dp"
            android:drawableTop="@drawable/ic_baseline_sentiment_very_dissatisfied_24"
            android:text="@string/dissatisfied"
            android:drawablePadding="@dimen/padding_8dp"
            android:backgroundTint="@color/gray400"
            android:textAllCaps="false"
           android:textStyle="bold"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_go_to_page4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/margin_24dp"
            android:layout_marginEnd="@dimen/margin_8dp"
            android:layout_marginBottom="@dimen/margin_bottom_72dp"
            android:textSize="@dimen/text_size20"
            android:text="@string/next_button" />


    </LinearLayout>

</FrameLayout>